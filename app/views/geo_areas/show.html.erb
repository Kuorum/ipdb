	      <tr class="header">
	        <th>Column</th>
	        <th>Details</th>
	      </tr>
	  </thead>  

	  <tr><td> 
	    <strong>Name</strong></td><td>
	    <%= @geo_area.name %>
	  </td> </tr>

	  <tr><td> 
	    <strong>Code</strong></td><td>
	    <%= @geo_area.code %>
	  </td> </tr>

	  <tr><td> 
	    <strong>Category</strong></td><td>
	    <%= @geo_area.category %>
	  </td> </tr>

	  <tr><td> 
	    <strong>Parent</strong></td><td>
	    <%= @geo_area.parent_id %>
	  </td> </tr>
  </table>
</div>

<br/><br/>
<hr/>
