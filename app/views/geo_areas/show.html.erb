<div class="row">
  <div class="col-md-10">
    <h1><span class="glyphicon glyphicon-globe"></span> Geo Area details</h1>
  </div>
  <div class="col-md-2">
    <%= link_to 'Scrape New Data', scrape_path(:region => @geo_area.id), :class => "btn btn-md btn-success", :style => "margin:25px 0 0 0;"  %>
  </div>
</div>

